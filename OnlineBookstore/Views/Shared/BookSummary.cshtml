@{
}

@model Book

<div class="card card-outline-primary m-2 p-1">
    <div class="bg-dark bg-opacity-25 p-1 rounded">
        <h3 class="text-black">@Model.Title</h3>

        <span class="badge bg-success" style="float:right">
            Category: @Model.Category
        </span>
    </div>

    <ul>
        <li>Author: @Model.Author</li>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.Isbn</li>
        <li>Classification: @Model.Classification</li>
        <li>Page Count: @Model.PageCount</li>
        <li>Price: $@Model.Price</li>
    </ul>

    <form method="post" asp-page="/Purchase">

        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text">
            <button type="submit" class="btn btn-outline-dark btn-outline-success btn-success bg-opacity-75 btn-sm text-white">Purchase</button>
        </span>

    </form>
</div>
